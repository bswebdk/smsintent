<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bswebdk.smsintent"
    android:versionCode="1"
    android:versionName="1.0.3" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.bswebdk.smsintent.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.EditActivity"
            android:label="@string/title_activity_edit"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.AskEditActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.AskActivity"
            android:label="@string/title_activity_ask"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.InfoActivity"
            android:label="@string/information"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        
        <activity
            android:name="com.bswebdk.smsintent.HelpActivity"
            android:label="@string/help"
            android:parentActivityName="com.bswebdk.smsintent.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bswebdk.smsintent.MainActivity" />
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

    </application>

</manifest>
